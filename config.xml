<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.bondzu.bondzuapp" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
	<name>Bondzu</name>
	<description>
	Connecting real people with real animals
	</description>
	<author email="contacto@bondzu.com" href="http://bondzu.com/">
	Bondzu Team
	</author>
