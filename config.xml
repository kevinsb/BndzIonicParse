	    <splash src="splash/ios/1536x2048.png" width="1536" height="2048"/>
	    <splash src="splash/ios/1024x768.png" width="1024" height="768"/>
	    <splash src="splash/ios/2048x1536.png" width="2048" height="1536"/>
	    <splash src="splash/ios/640x1136.png" width="640" height="1136"/>
	    <splash src="splash/ios/750x1334.png" width="750" height="1334"/>
	    <splash src="splash/ios/1242x2208.png" width="1242" height="2208"/>
	    <splash src="splash/ios/2208x1242.png" width="2208" height="1242"/>
