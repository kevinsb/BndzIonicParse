		<!-- iPad -->
		<icon src="icons/ios/icon76.png" width="76" height="76" />
		<icon src="icons/ios/icon152.png" width="152" height="152" />
		<!-- iOS 6.1 -->
		<!-- Spotlight Icon -->
		<icon src="icons/ios/icon40.png" width="40" height="40" />
		<icon src="icons/ios/icon80.png" width="80" height="80" />

		<!-- iPhone / iPod Touch -->
		<icon src="icons/ios/icon57.png" width="57" height="57" />
		<icon src="icons/ios/icon114.png" width="114" height="114" />

		<!-- iPad -->
		<icon src="icons/ios/icon72.png" width="72" height="72" />
		<icon src="icons/ios/icon144.png" width="144" height="144" />

